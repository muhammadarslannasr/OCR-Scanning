<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:cardMaxElevation="3dp"
    card_view:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scanner_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:maxEms="22"
                android:maxLines="1"
                android:text="Scanner Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text="Time 12:02 AM"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pauseBtn_ID"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/pause_ic" />

            <Button
                android:id="@+id/shareBtn_ID"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/share_icon_for_history" />


            <Button
                android:id="@+id/deleteBtn_ID"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/deelete_icon_for_history" />



        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>